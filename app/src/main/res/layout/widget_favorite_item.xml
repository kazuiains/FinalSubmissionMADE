<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_widget_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/iv_favorite_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_poster"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_widget_rate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/iv_favorite_widget"
            android:layout_alignBottom="@+id/iv_favorite_widget"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/v5dp"
            android:layout_marginBottom="@dimen/v5dp"
            android:background="@drawable/rate_widget"
            android:gravity="center"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="@dimen/tv25sp" />

        <TextView
            android:id="@+id/tv_widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/v5dp"
            android:layout_alignTop="@+id/tv_widget_rate"
            android:layout_toEndOf="@id/tv_widget_rate"
            android:background="@drawable/title_widget"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/v5dp"
            android:paddingTop="@dimen/v1dp"
            android:paddingEnd="@dimen/v10dp"
            android:paddingBottom="@dimen/v1dp"
            android:textSize="@dimen/tv20sp" />

        <TextView
            android:id="@+id/tv_widget_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_favorite_widget"
            android:layout_alignEnd="@+id/iv_favorite_widget"
            android:layout_marginTop="@dimen/v10dp"
            android:layout_marginEnd="@dimen/v10dp"
            android:background="@drawable/type_widget"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/v5dp"
            android:paddingTop="@dimen/v3dp"
            android:paddingEnd="@dimen/v5dp"
            android:paddingBottom="@dimen/v3dp"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/tv12sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>